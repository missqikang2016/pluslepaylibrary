<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lepayRV_AddCard_CardInfo"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/lepay_list_bg_green">
        


        <ImageView
            android:id="@+id/lepayIV_List_BankImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dip"
            android:layout_marginTop="14dip"
            android:src="@drawable/lepay_logo_lepay" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="15dip"
            android:layout_toRightOf="@+id/lepayIV_List_BankImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lepayTV_bankCard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lepayTV_bankCard_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/lepayTV_bankCard_cardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>



        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/lepayRV_bankCard_item_deleteView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:background="#90000000"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/lepayTV_bankCard_delete"
                android:layout_width="wrap_content"
                android:padding="24dip"
                android:gravity="center"
                android:layout_height="fill_parent"
                android:textColor="#ffffff"
                android:text="@string/lepay_textview_delete"
                android:textSize="20sp"/>

            <View
                android:layout_width="0.5dip"
                android:layout_height="25dip"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/lepayTV_bankCard_cancle"
                android:padding="24dip"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:layout_height="fill_parent"
                android:text="@string/lepay_textview_cancle"
                android:textSize="20sp"/>


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>